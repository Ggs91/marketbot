<%= form_with(model: [questionnaire, completion]) do |form| %>
  <%= hidden_field_tag :chatroom_id, chatroom.id %>
  <%= hidden_field_tag :bot_id, bot.id %>

  <% question.answers.each do |answer| %>
    <%= form.fields_for answer do |answer_fields| %>
      <%= answer.name %>: <%= answer_fields.radio_button :id, answer.id %>
      <br>
    <% end %>
  <% end %>

  <br>
  <%= render 'shared/disappearing_submit_button', name: 'Send', form: form %>
<% end %>
