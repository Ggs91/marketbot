  <% case message.message_type %>
  <% when 'introduction' %>
    <%= render 'messages/types/introduction', message: message, chatroom: chatroom, bot: bot, questionnaire: questionnaire %>
  <% when 'question' %>
    <%= render 'messages/types/question', message: message, completion: @completion, chatroom: chatroom, questionnaire: @questionnaire %>
  <% when 'answer' %>
    <%= render 'messages/types/answer' %>
  <% when 'reply' %>
    <%= render 'messages/types/reply', message: message %>
  <% end %>
