<% if message.content %>
  <div class="message <%= message.sender_type %>-message">
    <%= message.content %>
  </div>
<% end %>

<div class="message <%= message.sender_type %>-message">
  <%= message.question.name %>
</div>

<div class="message <%= message.sender_type %>-message">
  <%= render 'questions/question', question: message.question, questionnaire: questionnaire, completion: completion, chatroom: chatroom, bot: bot %>
</div>

